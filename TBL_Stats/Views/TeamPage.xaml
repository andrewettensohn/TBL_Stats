             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="TBL_Stats.Views.TeamPage">
    <ContentPage.Content>
        <!--<StackLayout >
            <Grid>
